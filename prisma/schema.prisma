// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userCode Int @id @unique
  firstName String
  lastName String
  email String @unique
  password String
  verified Boolean @default(false)
  role String @default("user")
  //Comments Relationship
  comments Comments[]
  //Reports Relationship
  reports Reports[]
  //Favorities Relationship
  favorities Favorities[]
}

model Category {
  id Int @id @unique @default(autoincrement())
  name String @unique
  icon String
  //Products Relationship
  products Products[]
}

model Vendors {
  vendorCode Int @id @unique
  firstName String
  lastName String
  email String @unique
  phoneNumber Int @unique
  password String
  verified Boolean @default(false)
  role String @default("vendor")
  //Products Relationship
  products Products[]
  // Rating Relationship
  rating Float @default(0)
}

model Products {
  id Int @id @unique @default(autoincrement())
  name String
  price Float
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
  published Boolean @default(false)
  //Product to Category Relationship
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  //Product to Vendors Relationship
  vendor Vendors @relation(fields: [vendorCode], references: [vendorCode])
  vendorCode Int
  //Images Relationship
  images Images[]
  //Comments Relationship
  comments Comments[]
  // Rating Relationship
  rating RatingProduct?
  //reports Relationship
  reports Reports[]
  //Favorities Relationship
  favorities Favorities[]
}

model Admin {
  id Int @id @unique @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  password String
  verified Boolean @default(false)
  role String @default("admin")
}

model Images {
  id Int @id @unique @default(autoincrement())
  url String
  //Product to Images Relationship
  product Products @relation(fields: [productId], references: [id])
  productId Int
}

model Comments {
  id Int @id @unique @default(autoincrement())
  comment String
  reting Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  //Product to Comments Relationship
  product Products @relation(fields: [productId], references: [id])
  productId Int
  //User to Comments Relationship
  user Users @relation(fields: [userCode], references: [userCode])
  userCode Int
  // RatingProduct to Product Relationship
  ratingProduct RatingProduct @relation(fields: [ratingId], references: [id])
  ratingId Int
}

model RatingProduct {
  id Int @id @unique @default(autoincrement())
  rating Float @default(0)
  //Product to ratingProduct Relationship
  product Products @relation(fields: [productId], references: [id])
  productId Int
  //Comments Relationship
  comments Comments[]
}

model Favorities {
  id Int @id @unique @default(autoincrement())
  createdAt DateTime @default(now())
  //Product to Favorities Relationship
  product Products @relation(fields: [productId], references: [id])
  productId Int
  //User to Favorities Relationship
  user Users @relation(fields: [userCode], references: [userCode])
  userCode Int
}

model Reports {
  id Int @id @unique @default(autoincrement())
  title String
  description String
  createdAt DateTime @default(now())
  //Product to Reports Relationship
  product Products @relation(fields: [productId], references: [id])
  productId Int
  //User to Reports Relationship
  user Users @relation(fields: [userCode], references: [userCode])
  userCode Int
}